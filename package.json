{
  "name": "root",
  "private": true,
  "devDependencies": {
    "lerna": "^3.4.0"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "npm run build:rh && npm run build:rhr",
    "build:rh": "lerna run build --scope react-habitat",
    "build:rhr": "lerna run build --scope react-habitat",
    "lint": "npm run lint:rh && npm run lint:rhr",
    "lint:rh": "lerna run lint --scope react-habitat",
    "lint:rhr": "lerna run lint --scope react-habitat-redux",
    "test": "npm run test:rh && npm run test:rhr",
    "test:w": "lerna run test:w --scope react-habitat",
    "test:rh": "lerna run test --scope react-habitat",
    "test:rhr": "lerna run build --scope react-habitat-redux",
    "start": "lerna run --scope react-habitat-example start --stream",
    "start:es5": "lerna run --scope react-habitat-example-es5 start --stream",
    "start:ts": "lerna run --scope react-habitat-example-type-script start --stream",
    "start:redux": "lerna run --scope react-habitat-example-redux start --stream"
  }
}
